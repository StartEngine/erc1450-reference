# Polygon Amoy Testnet Configuration
POLYGON_AMOY_RPC_URL=https://rpc-amoy.polygon.technology/
# Alternative RPC endpoints:
# https://polygon-amoy.blockpi.network/v1/rpc/public
# https://polygon-amoy-bor-rpc.publicnode.com

# Private key for deployment account (DO NOT COMMIT ACTUAL KEY)
# This should be the private key that has test MATIC on Polygon Amoy
DEPLOYER_PRIVATE_KEY=your_private_key_here

# Contract Configuration
TOKEN_NAME="StartEngine Security Token"
TOKEN_SYMBOL="SE-TEST"

# Initial RTA (Transfer Agent) address
# For testing, this can be the deployer address initially
# For production, use your secure custody wallet address
INITIAL_RTA_ADDRESS=

# Multi-sig signers for RTAProxy (3 addresses required)
# For production, use your secure custody wallet addresses
SIGNER_1_ADDRESS=
SIGNER_2_ADDRESS=
SIGNER_3_ADDRESS=

# Required signatures (2 for 2-of-3, 3 for 3-of-3)
REQUIRED_SIGNATURES=2

# Block Explorer API (for contract verification)
POLYGONSCAN_API_KEY=your_polygonscan_api_key

# Optional: Etherscan/Polygonscan verification
ETHERSCAN_API_KEY=