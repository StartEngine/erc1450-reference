# Include package data
include README.md
include LICENSE
include requirements.txt
include package.json

# Include the compiled contract artifacts
recursive-include startengine_erc1450/data/artifacts *.json

# Include source contract files for reference
recursive-include contracts *.sol

# Include interfaces
recursive-include interfaces *.sol

# Exclude build and test artifacts
recursive-exclude * __pycache__
recursive-exclude * *.pyc
recursive-exclude * *.pyo
recursive-exclude * *.orig
recursive-exclude * .DS_Store

# Exclude node modules and coverage
prune node_modules
prune coverage
prune cache
prune test
prune scripts